#include <stdio.h>
int findmin(int arr[], int size);
int main(void) {

    	int arr[5];     

	printf("Enter 5 array elements:\n"); 

        for (int i = 0; i < 5; i++)
	{
          scanf("%d", &arr[i]);

        }

       	 int minimum_element = findmin(arr, 5);

   	 printf("Minimum element: %d\n", minimum_element);

    	return 0; 

	}

int findmin(int arr[], int size) 

{

    int min_val = arr[0];

    for (int i = 0; i < size; i++) 

    {

        if (arr[i] < min_val)

	{
            min_val = arr[i];

        }

    }
       return min_val;
}
